<div>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <div style="margin-top: 3%;">
        <a href="/" class="textup" style="text-decoration: none">Расширения </a>&nbsp; <a class="textup"
            style="text-decoration: none; color: black;"> > </a>&nbsp; <a class="textup"
            style="color: black; text-decoration: none">{{extension.Name}}</a>
    </div>

    <div style="display: flex; justify-content:space-between; object-fit: fill; ">
        <img class="img_logo_cards" src="{{extension.Image_Logo}}" alt="img_logo_cards">
        <a class="textup name_in_cards" style="text-decoration: none"> {{extension.Name}}</a>
    </div>
    
    <a class="rate_in_cards" style="text-decoration: none; color: black;">Количество оценок: {{extension.Rate}} </a>
    <button type="button" class="btn btn-primary">Установить</button>
    <hr style="margin-top: 1%;">
    <div class="carousel_in_cards">
        <div class="divcarousel">
            <div class="carousel2">
                <script
                    src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
                <div class="div3">
                    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="true">
                        <div class="carousel-indicators">
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0"
                                class="active" aria-current="true" aria-label="Slide 1"></button>
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
                                aria-label="Slide 2"></button>
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
                                aria-label="Slide 3"></button>
                        </div>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="{{extension.Image_Description1}}" class="d-block w-100" alt="...">
                            </div>
                            <div class="carousel-item">
                                <img src="{{extension.Image_Description2}}" class="d-block w-100" alt="...">
                            </div>
                            <div class="carousel-item">
                                <img src="{{extension.Image_Description3}}" class="d-block w-100" alt="...">
                            </div>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
                            data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
                            data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>
                <hr style="width: 1000px;">
            </div>
        </div>
    </div>
    <p class="review">Обзор</p>
    <p class="description">{{extension.Description}}</p>
</div>