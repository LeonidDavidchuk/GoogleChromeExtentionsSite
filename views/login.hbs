<form action="/auth/login" method="POST" style="margin-top: 3%;">
    <label for="uname"><b>Логин</b></label>
    <input type="text" placeholder="Введите логин" name="username" required>
    <label for="psw"><b>Пароль</b></label>
    <input type="password" placeholder="Введите пароль" name="password" required>
    <br>
    <br>
    <button class="background_but">Войти</button>
    <br>
    <p style="color: red">{{message}}</p>
    
    <a href="/registration">Нет аккаунта? Зарегистрироваться</button>

</form>